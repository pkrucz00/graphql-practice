generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id            Int          @id @default(autoincrement())
  street        String
  city          String
  state         String
  zip           String
  weatherData   WeatherData?
  coordinates   Coordinates?
  createdAt     DateTime     @default(now())
  coordinatesId Int?
}

model WeatherData {
  id                  Int      @id @default(autoincrement())
  observationTime     DateTime @default(now())
  temperature         Int
  weatherCode         Int
  weatherIcons        String[]
  weatherDescriptions String[]
  windSpeed           Int
  windDegree          Int
  windDir             String
  pressure            Int
  precip              Float
  humidity            Int
  cloudcover          Int
  feelslike           Int
  uvIndex             Int
  visibility          Int
  propertyId          Int      @unique
  property            Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model Coordinates {
  id         Int      @id @default(autoincrement()) @map("_id")
  latitude   Float
  longitude  Float
  propertyId Int      @unique
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}
